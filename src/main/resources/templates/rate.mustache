{{>layout/header}}



{{#profiles}}

    <div id="ImageContainer">
      {{#imageNames}}
              <img id="RateImages" src="./images/{{.}}">
              <div id="NameAge">{{name}}, {{age}}
                  <div id="degreeCoursePosition">
                      {{degreeCourse}} {{semester}}. Semester</div>
                  <div id="BioStyle">
                      {{aboutMe}}</div>
              </div>
      {{/imageNames}}
        <div id="LikeHateButtonsPosition">
                <form  method="post" action="./rate?profileId={{id}}&isLike=true">
                    <input id="Love" type="submit" value="Like">
                    {{>snippet/csrfToken}}

                <form  method="post" action="./rate?profileId={{id}}&isLike=false">
                <input id="Hate" type="submit" value="Hate">
                {{>snippet/csrfToken}}
        </div>
    </div>
                <br/>
            {{/profiles}}

            {{^profiles}}
                <p>Looks like you've already rated everyone!</p>
            {{/profiles}}
{{>snippet/nav}}
{{>layout/footer}}